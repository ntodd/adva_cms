<li class="activity <%= activity_css_classes(activity) %> <%= cycle '', 'highlight', :name => "activities" %> clearfix">
  <p class="meta">
    <%= activity_datetime activity, recent %><br />
    <%= link_to_activity_user activity %><br />
    <%= link_to_content activity.object if activity.object %>
  </p>
  <p><%= t :'adva.activity.topic', :actions => activity.all_actions.to_sentence(:skip_last_comma => true) %></p>
  <blockquote><p>&quot;<%= truncate strip_tags(activity.title), 100 %>&quot;</p></blockquote>
  <% if activity.object -%>
    <ul>
    <li><%= link_to t(:'adva.common.edit'), edit_topic_path(activity.object.section, activity.object) %></li>
    <li><%= link_to t(:'adva.common.delete'), topic_path(activity.object.section, activity.object), :method => :delete, :confirm => "Are you sure you wish to delete this topic?" %></li>
    </ul>
  <% end -%>    
</li>